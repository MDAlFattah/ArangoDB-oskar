#!/bin/bash
script_dir="$(dirname "$(readlink -f "${BASH_SOURCE[0]}")")"
. "$script_dir/createRepo"

oskar_dir="$script_dir/.."

echo "run test"

version="3.4"
incoming="/packages"
repo="/repositories"
reponame="arangodb34"

#centos
#fedora
#suse
mkdir -p $repo/community/$reponame/RPM/x86_64
mkdir -p $repo/enterprise/$reponame/RPM/x86_64

ensure_oskar "$version" "$incoming" "$repo" \
            "Linux" "RPM" \
            "x86_64" "rpm"

#debian
#ubuntu
mkdir -p $repo/community/$reponame/DEBIAN/amd64
mkdir -p $repo/enterprise/$reponame/DEBIAN/amd64

ensure_oskar "$version" "$incoming" "$repo" \
            "Linux" "DEBIAN" \
            "amd64" "deb"
